.erc .erc-image-wrapper {

  display: inline-block;

  .erc-image-editor {
    width: 300px;

    .erc-image-preview-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;

      background: darken(#444, 20%);
      min-height: 200px;
      margin-bottom: 10px;

      img.erc-image-preview {
        display: block;
        max-width: 280px;
        margin: auto 0;
      }

    }

  }
}

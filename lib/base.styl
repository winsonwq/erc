
.erc {

  .edit-mode-button {
    border: none;
    padding: 3px 5px;
    background: #333;
    color: white;
    border-radius: 2px;
    outline: none;
    cursor: pointer;

    &:hover {
      background: lighten(#333, 5%);
    }

    &:active {
      background: lighten(#333, 10%);
    }

  }

  .erc-editor {

    display: block;
    margin-bottom: 10px;
    text-align: left;

    label {
      display: block;
      margin-bottom: 5px;

      > span {
        display: block;
        line-height: 2;
      }
    }

    input,
    textarea {
      margin: 0;
      outline: none;
      resize: none;
    }

    textarea {
      height: 150px;
    }

    input[type="text"],
    input[type="number"],
    input[type="email"],
    textarea {
      background: darken(#444, 20%);
      color: white;
      border: none;
      padding: 2px 3px;
      line-height: 1.5;
      width: 100%;
      box-shadow: inset 0 0 10px darken(#444, 30%);
    }

  }

}

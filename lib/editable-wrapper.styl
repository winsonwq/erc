
.erc .editable-wrapper {
  position: relative;

  .editable-wrapper-content {
    position: absolute;

    &.non-editmode {
      display: none;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      justify-content: center;
      align-items: center;
    }

    &.editmode {
      top: 100%;
      z-index: 10;
    }

  }

  &.editmode {
    padding: 10px;
    background: #444;
    color: white;
    border-radius: 2px;
    box-shadow: 0 0 2px #444;

    .editable-wrapper-content {
      position: static;
    }

    .edit-mode-button {
      margin-right: 5px;
    }

  }

  &:hover .editable-wrapper-content.non-editmode {
    display: flex;
    background: rgba(255, 255, 255, .6);
    border: 1px solid #ccc;
    border-radius: 2px;
  }

}

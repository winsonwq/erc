
.erc .erc-paragraph {

  .paragraph-editor {
    outline: none;

    &:hover {
      box-shadow: inset 0 0 2px 1px #ddd;
    }
  }

  .paragraph-placeholder {
    display: block;
    padding: 5px;
    border: 1px dashed #ddd;

    font-style: italic;
    font-size: .8em;
    text-align: center;

    color: #ddd;
  }

}

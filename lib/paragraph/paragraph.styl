
.erc .erc-paragraph {

  .paragraph-editor {
    outline: none;
    background: darken(#444, 20%);
    color: white;
    border: none;
    width: 100%;
    box-shadow: inset 0 0 10px darken(#444, 30%);
    max-height: 150px;
    overflow: auto;
  }

  .paragraph-placeholder {
    display: block;
    padding: 5px;
    border: 1px dashed #ddd;

    font-style: italic;
    font-size: .8em;
    text-align: center;

    color: #ddd;
  }

}

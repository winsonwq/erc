@import "../../lib/**/*.styl"

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-size: 14px;
  line-height: 1.3;
  font-family: "Open Sans", "Helvetica Neue", Helvetica, sans-serif;
}

h1 {
  font-size: 40px;
  text-align: left;
  margin: 10px 0 20px;;
}

h2 {
  margin: 0;
  font-size: 20px;
  margin: 10px 0 20px;
}

.styled-btn {
  a {
    width: 200px;
    text-align: center;
    line-height: 1.5;
    padding: 10px 20px;
    background: #37ADB7;
    display: inline-block;
    text-decoration: none;
    color: white;
    border-radius: 4px;
  }
}

.action-bar {
  text-align: center;
  margin-bottom: 10px;
  padding: 10px;
}

.header {
  background: #222;
  color: white;
  text-align: center;
  box-shadow: 0 0 2px #444;

  > span {
    display: inline-block;
    line-height: 3;
  }
}

#app {
  background: #f1f1f1;
}

article {
  width: 800px;
  margin: 0 auto;
  background: #fff;
  padding:  20px 20px 50px;
}

.image-list-item {
  text-align: center;
  padding-bottom: 10px;

  img.erc-image {
    padding: 10px;
    border: 1px solid #eee;
    background: #f1f1f1;
    border-radius: 4px;
  }

  > p {
    line-height: 1.5;
  }
}
